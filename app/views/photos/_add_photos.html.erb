<%= form_tag(gallery_photos_path(@gallery, format: :json), id: 'upload-form', enctype: 'multipart/form-data') do %>
    <%= hidden_field_tag(:gallery_id, @gallery.id) %>
    <div class="row">
        <div class="col">
            <div id="photos-file-input">
                <%= file_field_tag('photos[]', multiple: true, accept: 'image/png,image/gif,image/jpeg') %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="d-inline-flex flex-wrap" id="photos-row"></div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div id="upload-buttons" class="form-buttons d-none form-group text-right p-2 mt-2">
                <%= link_to('cancel', root_path) %>
                <%= submit_tag('upload', id: 'upload-photos-btn', class: 'btn btn-primary') %>
            </div>
        </div>
    </div>
<% end %>
