<% form_for(@photo) do |f| %>

<%= f.hidden_field_tag(:gallery_id,@gallery.id) %>
<table cellspacing="0" cellpadding="3" border="0">
    <tr>
        <td><%= f.label(:artist) %></td>
        <td><%= f.text_field(:artist) %></td></tr>
    <tr>
        <td><%= f.label(:src, 'File' %></td>
        <td><%= <%= f.file_field :src %></td></tr>
    <tr>
        <td>&nbsp;</td>
        <td class="submit">
        <%= f.submit(@photo.id ? 'update' : 'create') %></td></tr>
</table>