<%= simple_form_for(@gallery, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>
    <%= f.input(:name) %>
    <%= f.input(:code) %>
    <%= f.input(:gallery_on, :as => :string, :id => 'foobar') %>
    <%= f.input(:default_photo) %>
    <%= f.error :base %>
    <%= f.button(:submit) %>
<% end %>