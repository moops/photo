<%= form_with(model: @gallery, local: true) do |form| %>
    <div class="form-group row">
        <%= form.label(:name, class: 'col-sm-2 col-form-label text-right') %>
        <div class="col-sm-3">
            <%= form.text_field(:name, class: 'form-control focus') %>
        </div>
        <%= form.label(:code, class: 'col-sm-2 col-form-label text-right') %>
        <div class="col-sm-3">
            <%= form.text_field(:code, class: 'form-control') %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label(:gallery_on, class: 'col-sm-2 col-form-label text-right') %>
        <div class="col-sm-3">
            <%= form.text_field(:gallery_on, placeholder: Date.today.strftime("%Y-%m-%d"), id: 'gallery-gallery-on', class: 'form-control') %>
        </div>
        <%= form.label(:default_photo, class: 'col-sm-2 col-form-label text-right') %>
        <div class="col-sm-3">
            <%= collection_select(:gallery, :default_photo_id, @gallery.photos, :id, :description, {}, { class: 'form-control' }) %>
        </div>
    </div>
    <div class="form-group row">
        <%= form.label(:private_key, 'private?', class: 'col-sm-2 col-form-label text-right') %>
        <div class="col-sm-3">
            <%= form.check_box(:private_key, id: 'gallery_private_key', class: 'form-control mt-2', checked: @gallery.private?) %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <div class="text-right form-buttons p-2">
                <%= link_to('cancel', root_path) %>
                <%= form.submit(@gallery.new_record? ? 'create' : 'update', class: 'btn btn-primary') %>
            </div>
        </div>
    </div>
<% end %>
