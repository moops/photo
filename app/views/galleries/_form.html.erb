<%= simple_form_for(@gallery, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>
    <%= f.input(:name) %>
    <%= f.input(:code) %>
    <%= f.input(:gallery_on, :as => :string, input_html: {'data-date-format' => "yyyy-mm-dd"}) %>
    <%= f.input(:default_photo) %>
    <%= f.input :private_key, :as => :boolean, :label => 'private?' %>
    <%= f.error :base %>
    <%= f.button(:submit) %>
<% end %>