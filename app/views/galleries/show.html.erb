<div id="gallery-popup" class="modal hide fade"></div>

<div class="row-fluid">
    <div class="span12 gallery-info">
        <span class="name"><%= @gallery.name %></span>
        <span class="info">
            <%= ": #{@gallery.gallery_on.strftime('%b %d, %Y')}" if @gallery.gallery_on %>
        </span>
    </div> <!-- end #gallery-info -->
</div> <!-- end row -->

<div class="row-fluid">
    <div class="span3 gallery-thumbnails">
        <%= render(:partial => 'thumbnails', :locals => { :edit => false, :link => true }) %>
    </div>
    <div class="span9 gallery-photo-container">
        <div class="row-fluid">
            <div class="span6 photo-caption">
                photo-caption
            </div>
            <div class="span6 photo-tools">
                <div class="dropdown pull-right">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">tools</a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <li><%= link_to('download', @photo.img_url, :tabindex => "-1") %></li>
                        <li><%= link_to('comments', photo_comments_path(@photo), :remote => true, :tabindex => "-1") %></li>
                        <li><%= link_to('exif', gallery_photo_path(@gallery, @photo, :exif => true), :remote => true, :tabindex => "-1") %></li>
                    </ul>
                </div>
            </div> <!-- end .photo-tools -->
        </div>
        <div class="row-fluid">
            <div class="span12 gallery-photo">
                <%= image_tag(@photo.img_url, :title => @photo.img.full_filename) %>
            </div>
        </div>
    </div> <!-- end .gallery-photo -->
</div> <!-- end row -->
