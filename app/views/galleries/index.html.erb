<div class="box" id="gallery-index-recent">
  <div class="boxhead">recent public galleries</div>
  <div class="boxcontent">
    <% if @recent_galleries and !@recent_galleries.empty? %>
      <ul>
        <% for g in @recent_galleries %>
          <li>
            <%= link_to(g.name, g) %><br/>
            <%= g.photo_count %> photos :: 
            <%= g.gallery_on.strftime("%b %d, %Y") %></li>
        <% end %>
      </ul>
    <% else %>
      none
    <% end %>
  </div>
</div>

<% if current_user %>
    <div class="box" id="gallery-index-mine">
        <div class="boxhead">my galleries</div>
        <div class="boxcontent">
            <% if current_user.galleries and !current_user.galleries.empty? %>
                <ul>
                <% for g in current_user.galleries %>
                    <li>
                        <%= link_to(g.name, g) %><br/>
                        <%= g.photo_count %> photos :: 
                        <%= g.gallery_on.strftime("%b %d, %Y") %>
                    </li>
                <% end %>
                </ul>
            <% else %>
                none
            <% end %>
            <div class="pull-right">
                <% if can? :create, Gallery %>
                    <%= link_to("New Gallery", new_gallery_path, :class => 'btn btn-primary') %>
                <% end %>
            </div>
            <div style="clear: both"/>
        </div>
    </div>
<% end %>