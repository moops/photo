<div id="thumbnail-container">
    <ul class="thumbnails">
    <% for p in @gallery.photos %>

        <li class="span4">
          <% if link %>
            <%= link_to(image_tag(p.img_url(:thumb), :title => p.img),
                             gallery_photo_path(@gallery, p),
                             :remote => true,
                             :update => 'photo_container',
                             :method => :get,
                             :class => 'thumbnail') %>
          <% else %>
            <%= image_tag(p.img_url(:thumb), :title => p.img) %>
          <% end %>
          <% if edit %>
            <%= check_box_tag("remove[#{p.id.to_s}]") %>
          <% end %>
        </li>
      <% end %>
      </ul>

</div>