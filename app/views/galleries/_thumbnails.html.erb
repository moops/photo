<div id="thumbnails">
  <table cellpadding="0" cellspacing="0">
    <tr>
      <% for p in @gallery.photos %>
        <td>
        <div class="thumbnail">
          <% if link %>
            <%= link_to(image_tag(p.source_thumb_url, :title => p.filename),
                             :url => gallery_photo_path(@gallery, p), 
                             :remote => true,
                             :update => 'photo_container',
                             :method => :get) %>
          <% else %>
            <%= image_tag(p.source_thumb_url, :title => p.filename) %>
          <% end %>
          <% if edit %>
            <%= check_box_tag("remove[#{p.id.to_s}]") %>
          <% end %>
        </div></td>
      <% end %>
    </tr>
  </table>
</div>