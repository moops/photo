<%= form_tag(sessions_path) do %>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="form-group row">
                        <%= label_tag(:email, 'email', class: 'col-sm-3 col-form-label text-right') %>
                        <div class="col-sm-9">
                            <%= email_field_tag(:email, params[:email], class: 'form-control focus') %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <%= label_tag(:password, 'password', class: 'col-sm-3 col-form-label text-right') %>
                        <div class="col-sm-9">
                            <%= password_field_tag(:password, nil, class: 'form-control') %>
                        </div>
                    </div>
                </div>

                <div class="form-group row justify-content-end">
                    <div class="col-4">
                        <%= submit_tag('log in', class: 'btn btn-primary') %>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">close</button>
                    </div>
                </div>
            </div> <!-- end .modal-body -->
            <div class="modal-footer">
                no account? &nbsp; <%= link_to 'register', signup_path, 'data-dismiss' => 'modal', remote: true %>
            </div>
        </div> <!-- end .modal-content -->
    </div> <!-- end .modal-dialog -->
<% end %>
