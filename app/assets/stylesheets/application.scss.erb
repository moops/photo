 @import "bootstrap";

body {
  margin-top: 8px;
  margin-bottom: 50px;
}

@import "datepicker";

/*
 ************************************************
 bootstrap fixes
 ************************************************
 */
div.modal form {
  margin-bottom: 0px;
}

.pagination {
  margin-left: 20px;
}

/*
 ************************************************
 gallery
 ************************************************
 */

.gallery-name {
  font-weight: bold;
  font-size: 2em;
}

.gallery-date {
  font-weight: bold;
  font-size: 1.2em;
}

.gallery-thumbnails {
  max-height: 700px;
  overflow: scroll;
}

.gallery-horiz-thumbnails {
  max-height: 100px;
  overflow: auto;
  white-space: nowrap;
}

img.thumbnail {
  margin: 2px;
  border: 2px solid #333;
}

.photo-caption {
  font-size: 1.5em;
}

.gallery-photo img {
  border: 2px solid #333;
  max-height: 550px;
}

div.gallery-list {
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

div.gallery-summary img {
  width: 70px;
  margin-bottom: 0.5em;
}

/*
 ************************************************
 sticky footer
 ************************************************
 */
.container-fluid {
  padding-top: 55px;
}

footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  border-top: 1px solid #000;
  line-height: 50px;
  background-color: #ddd;
}

.copy {
  margin-left: 10px;
}

/*
 ************************************************
 boxes
 ************************************************
 */

.box {
  border: 1px solid #333;
  border-radius: 10px;
  margin-top: 1.5em;
}

.boxhead {
  border-bottom: 1px solid #333;
  background-color: #333;
  font-weight: bold;
  padding: 5px 5px 5px 35px;
  border-radius: 10px 10px 0px 0px;
}

.boxcontent {
  padding: 10px;
}

/*
 ************************************************
 miscellaneous
 ************************************************
 */

//still used in _comments
.errorText {
  font-style: italic;
  font-weight: bold;
  color: #a00;
}

div.exif-label {
  width: 30%;
  float: left;
  font-weight: bold;
  color: #999;
}

.comment .date {
  font-style:italic;
}

.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 3em;
  padding-top: 1em;
  z-index: 2;
  background: rgba(39, 42, 43, 0.7);
  border-radius: 4px;
}

/*
 ************************************************
  forms
 ************************************************
 */

label.required:after {
  color: red;
	font-weight: bold;
	font-size: 1.5em;
	line-height: 50%;
	content: " *";
	vertical-align: bottom;
}

#photos-file-input {
  border: 5px dashed red;
  height: 50px;
  line-height: 50px;
}

#photos-file-input input[type="file"] {
  opacity: 0;
  width: 100%;
  height: 100%;
}

/*
 ************************************************
  icon links
 ************************************************
 */
 a:link [class^="icon-"], a:visited [class^="icon-"], a:hover, a:active [class^="icon-"] {
  text-decoration: none;
  color: #333;
}

span.info a [class^="icon-"] {
  font-size: 0.7em;
}

.empty-gallery-icon {
  font-size: 60px;
  color: #666;
}
