 @import "bootstrap";

body { margin-top: 8px; }
@import "datepicker";

.fileupload-loading {
  background: url(<%= asset_path 'loading.gif' %>) center no-repeat;
}

/*
 ************************************************
 bootstrap fixes
 ************************************************
 */
div.modal form {
    margin-bottom: 0px;
}

.pagination {
    margin-left: 20px;
}

/*
 ************************************************
 gallery
 ************************************************
 */
.gallery-info {
    padding-bottom: 20px;
    text-align: center;
}

.gallery-info .name {
    font-weight: bold;
    font-size: 2em;
}

.gallery-info .info {
    font-weight: bold;
    font-size: 1.5em;
}

ul.thumbnails li {
  list-style: none;
}

.gallery-thumbnails {
    max-height: 700px;
    overflow: scroll;
}

a.thumbnail img {
  margin: 1px 0px;
}

.photo-caption {
    font-size: 1.5em;
}

.photo-tools {
    padding-right: 2%;
}

.gallery-photo {

}

.gallery-photo img {
    border: 1px solid #000;
    margin: 12px 0px;
    max-height: 500px;
}

div.gallery-list {
    box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

div.gallery-list ul {
    list-style: none;
}

div.gallery-summary img {
    float: left;
    width: 60px;
    padding-bottom: 10px;
}

div.gallery-summary div.gallery-summary-text {
    padding-left: 80px;
}

div.gallery-summary>br {
    clear: left;
}

/*
 ************************************************
 sticky footer
 ************************************************
 */

body {
    height: 100%;
    margin-bottom: 50px;
}

.container-fluid {
    padding-top: 55px;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50px;
  border-top: 1px solid #000;
  line-height: 50px; /* Vertically center the text there */
  background-color: #f5f5f5;
}

.copy {
  margin-left: 10px;
}

/*
 ************************************************
 boxes
 ************************************************
 */

.box {
  border: 1px solid #333;
  border-radius: 10px;
  margin-top: 1.5em;
}

.boxhead {
  border-bottom: 1px solid #333;
  background-color: #333;
  font-weight: bold;
  padding: 5px 5px 5px 35px;
  border-radius: 10px 10px 0px 0px;
}

.boxcontent {
  padding: 10px;
}

/*
 ************************************************
 miscellaneous
 ************************************************
 */

//still used in _comments
.errorText {
  font-style: italic;
  font-weight: bold;
  color: #a00;
}

.clear {
  clear:both;
}

td.label {
  text-align:right;
}

div.exif-label {
  width: 30%;
  float: left;
  font-weight: bold;
  color: #999;
}

.comment {
}

.comment .date {
  font-style:italic;
}

/*
 ************************************************
  forms
 ************************************************
 */
.label {
  text-align: right;
}

label.required:after {
    color: red;
	font-weight: bold;
	font-size: 1.5em;
	line-height: 50%;
	content: " *";
	vertical-align: bottom;
}

form.dropzone {
  border: 1px solid red;
}

div#drop-zone {
  border: 5px dashed orange;
  height: 50px;
  line-height: 50px;
}

div#photos-file-input {
  border: 5px dashed red;
  height: 50px;
  line-height: 50px;
}

#photos-file-input input[type="file"] {
  opacity: 0;
  width: 100%;
  height: 100%;
}

/*
 ************************************************
  icon links
 ************************************************
 */
 a:link [class^="icon-"], a:visited [class^="icon-"], a:hover, a:active [class^="icon-"] {
  text-decoration: none;
  color: #333;
}

span.info a [class^="icon-"] {
  font-size: 0.7em;
}
