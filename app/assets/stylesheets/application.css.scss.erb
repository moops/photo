
@import "jdpicker";
@import "jquery_ui";

// Set the correct sprite paths
$iconSpritePath: asset-path('glyphicons-halflings', image);
$iconWhiteSpritePath: asset-path('glyphicons-halflings-white', image);

$navbarBrandColor: #e22;

@import "bootstrap";
body { padding-top: 40px; }
@import "bootstrap-responsive";
@import "jquery.fileupload-ui";
@import "galleriffic";

.fileupload-loading {
  background: url(<%= asset_path 'loading.gif' %>) center no-repeat;
}

body {
    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 76%;
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-style: normal;
    text-decoration: none;  
    font-weight: normal;
    color: #555;
}

a           { text-decoration: none; font-family: verdana; }
a:visited   { text-decoration: none; font-family: verdana; }
a:active    { text-decoration: none; font-family: verdana; }
a:hover     { text-decoration: underline; font-family: verdana; }

textarea    { font-family: Arial,Verdana,Helvetica,sans-serif; font-size: 1em; }

/*
 ************************************************
 gallery
 ************************************************
 */
#gallery-info {
    float: left;
}

#gallery-info .name {
    color: #333;
    font-weight: bold;
    font-size: 2em;
}

#gallery-info .info {
    color: #666;
    font-weight: bold;
    font-size: 1.5em;
}

#gallery-index-recent {
    margin: 20px 20px 0px 0px;
    float: left;
    width: 40%;
}

#gallery-index-mine {
    margin-top: 20px;
    float: left;
    width: 40%;
}

div#gallery-index-recent ul, div#gallery-index-mine ul {
    list-style: none;
}

div.gallery-summary img {
    float: left;
    width: 60px;
    padding-bottom: 10px;
}

div.gallery-summary div.gallery-summary-text {
    padding-left: 80px;
}

div.gallery-summary>br {
    clear: left;
}


#comments {
    padding-top:15px;
    width:240px;
    text-align:left;
}

footer {
    margin-top: 20px;
    border-top: 1px solid #ccc;
}


div#gallery div.caption div.tools {
	float: right;
}

div#gallery div.caption div.tools div.download {
	float: none;
}


/*
 ************************************************
 boxes
 ************************************************
 */

.box {
  border: 1px solid #ccc;
  border-radius: 10px;
}

.boxhead {
  border-bottom: 1px solid #ccc;
  border-top-radius: 10px;
  font-weight: bold;
  padding: 5px;
}

.boxcontent {
  padding: 10px;
}

/*
 ************************************************
 miscellaneous
 ************************************************
 */

//still used in _comments
.errorText {
  font-style: italic;
  font-weight: bold;
  color: #a00;
}

.clear {
  clear:both;
}

td.label {
  text-align:right;
}

div.exif-label {
  width: 30%;
  float: left;
  font-weight: bold;
  color: #999;
}

div.exif-data {
}

.caption {
  font-weight:bold;
  padding-bottom:10px;
}

.comment {
}

.comment .date {
  font-style:italic;
}

/*
 ************************************************
  forms
 ************************************************
 */

img.calIcon {
    position: absolute;
    cursor: pointer;
}

form.main textarea { 
    width: 300px; 
}

.label {
  text-align: right;
}

