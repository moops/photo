gem 'cancan'                  # authorization
gem 'jquery-rails'            # unobtrusive javascript
gem 'carrierwave'             # file uploads to s3
#gem 'aws-s3' #, :version => ">= 0.6.2", :lib => "aws/s3"
gem 'exifr'                   # image exif info extration
gem 'rmagick'                 # imagemagick

